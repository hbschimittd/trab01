#SELECT
SELECT * FROM USUARIO;
SELECT * FROM FICHA;
SELECT * FROM FICHA_EXERCICIO;
SELECT * FROM EXERCICIO;
SELECT * FROM USUARIO_AVALIACAO;
SELECT * FROM COMENTARIO;
SELECT * FROM MENSAGEM;
SELECT * FROM RESPOSTA;

#WHERE
SELECT * FROM USUARIO_AVALIACAO
WHERE USUARIO_AVALIACAO.IMC <= 18.5;

SELECT * FROM USUARIO
WHERE USUARIO.D_NASCIMENTO = '19950928';

SELECT * FROM EXERCICIO
WHERE EXERCICIO.NOME = SUPINO;

#OPERADOR LOGICO
SELECT * FROM USUARIO
WHERE USUARIO.D_NASCIMENTO >= '19950928';

SELECT * FROM FICHA_EXERCICIO
WHERE FICHA_EXERCICIO.QUANTIDADE <= 25;

#LIKE
SELECT * FROM USUARIO
WHERE USUARIO.NOME LIKE 's%';

SELECT * FROM EXERCICIO
WHERE EXERCICIO.NOME LIKE 's%';

SELECT * FROM COMENTARIO
WHERE COMENTARIO.ASSUNTO LIKE 's%';

#UPDATE
UPDATE USUARIO
  SET USUARIO.NOME = 'Helio'
WHERE USUARIO.CODIGO = 2;

UPDATE USUARIO
SET USUARIO.E_MAIL = 'hbschimittd@gmail.com'
WHERE USUARIO.CODIGO = 1;

UPDATE EXERCICIO
SET EXERCICIO.NOME = 'Supino'
WHERE EXERCICIO.CODIGO = 4;

UPDATE FICHA_EXERCICIO
SET FICHA_EXERCICIO.QUANTIDADE = 25
WHERE FICHA_EXERCICIO.CODIGO = 5;

UPDATE FICHA
SET FICHA.PESO = 78,5
WHERE FICHA.CODIGO = 4;

UPDATE USUARIO_AVALIACAO
SET USUARIO_AVALIACAO.IMC = 18.5
WHERE USUARIO_AVALIACAO.CODIGO = 4

#GROUP BY
SELECT * FROM USUARIO
GROUP BY USUARIO.NOME

SELECT * FROM USUARIO
GROUP BY USUARIO.CODIGO

SELECT * FROM EXERCICIO
GROUP BY EXERCICIO.NOME

SELECT * FROM FICHA_EXERCICIO
GROUP BY FICHA_EXERCICIO.QUANTIDADE

SELECT * FROM USUARIO_AVALIACAO
GROUP BY USUARIO_AVALIACAO.IMC
