#CREATE
CREATE TABLE USUARIO (
	NOME VARCHAR(50),
	SEXO VARCHAR (5),
	D_NASCIMENTO DATE,
	E_MAIL VARCHAR(100),
	CODIGO SERIAL PRIMARY KEY);
CREATE TABLE FICHA (
	CODIGO SERIAL PRIMARY KEY,
	PESO FLOAT,
	ALTURA FLOAT,
	QUADRIL FLOAT,
	FREQUENCIA INT,
	D_INICIO DATE,
	D_FINAL DATE);
CREATE TABLE FICHA_EXERCICIO (
	CODIGO SERIAL PRIMARY KEY,
	QUANTIDADE INT,
	SERIE INT);
CREATE TABLE EXERCICIO (
	CODIGO SERIAL PRIMARY KEY,
	NOME VARCHAR(50));

CREATE TABLE USUARIO_AVALIACAO (
	CODIGO SERIAL PRIMARY KEY,
	DATA_CONSULTA DATE,
	IMC FLOAT,
	GCD FLOAT,
	IAC FLOAT,
	TBM FLOAT,
	PESO FLOAT);

CREATE TABLE COMENTARIO (
	CODIGO SERIAL PRIMARY KEY,
	ASSUNTO VARCHAR(100),
	DATA_COMENT DATE);
CREATE TABLE MENSAGEM (
	CODIGO SERIAL PRIMARY KEY,
	TEXTO VARCHAR (500));
CREATE TABLE RESPOSTA (
	CODIGO SERIAL PRIMARY KEY,
	TEXTO_R VARCHAR (500),
	DATA_R DATE);


